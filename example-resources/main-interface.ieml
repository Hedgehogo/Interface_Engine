= BoxScroll:
normal-object-position: [0, 0]
object: = Text:
	background: @background
	text-blocks:
		-
			text: " "
			style:
				base-style: @main-text-style
				lines: []
				text-color: magenta
		-
			text: "text"
			style: @main-text-style
		-
			text: " text2"
			style:
				base-style: @main-text-style
				text-color: red
		-
			text: " text3"
			style: @main-text-style
	text-interaction: = TextTouchI:
		action: = TextSelectionA: null